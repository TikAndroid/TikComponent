<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/layout_market_tab_item"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_marginStart="@dimen/dimen_12"
        android:layout_marginEnd="@dimen/dimen_12"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/market_stock_currency"
            android:src="@drawable/ic_tag_hk"
            android:layout_marginTop="@dimen/dimen_15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_marginTop="@dimen/dimen_10"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:orientation="vertical">

            <com.tik.android.component.widget.MediumTextView
                android:id="@+id/market_stock_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/market_search_result_item_name"
                tools:text="aaaaaaaaaaaaaa"/>

            <com.tik.android.component.widget.RegularTextView
                android:id="@+id/market_stock_symbol"
                style="@style/market_search_result_item_symbol"
                android:layout_width="wrap_content"
                android:layout_marginTop="@dimen/dimen_6"
                android:layout_marginBottom="@dimen/dimen_10"
                tools:text="aaaaaaaaaaaaaa"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <com.tik.android.component.widget.MediumTextView
            android:id="@+id/market_price"
            android:layout_weight="1.5"
            tools:text="aaaaa"
            android:gravity="end"
            android:layout_width="0dp"
            android:layout_gravity="center_vertical"
            android:textSize="@dimen/text_16"
            android:textColor="#23262F"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/dimen_20"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1.5"
            android:layout_marginTop="@dimen/dimen_10"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:orientation="vertical">

            <com.tik.android.component.widget.MediumTextView
                android:id="@+id/market_gains"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_gravity="end"
                tools:text="aaaaa"
                android:textSize="@dimen/text_16"
                android:textColor="#23262F" />

            <com.tik.android.component.widget.MediumTextView
                android:id="@+id/market_gains_rate"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_gravity="end"
                android:layout_marginTop="@dimen/dimen_6"
                tools:text="aaaaa"
                android:textSize="@dimen/text_12"
                android:textColor="#23262F" />

        </LinearLayout>
    </LinearLayout>

</LinearLayout>
