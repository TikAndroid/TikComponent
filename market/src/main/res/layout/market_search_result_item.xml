<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/search_layout_result"
    android:orientation="vertical">

    <LinearLayout
        android:layout_marginStart="@dimen/dimen_12"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/search_stock_currency"
            android:src="@drawable/ic_tag_hk"
            android:layout_marginTop="@dimen/dimen_15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_marginTop="@dimen/dimen_10"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:orientation="vertical">

            <com.tik.android.component.widget.MediumTextView
                android:id="@+id/search_stock_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLength="45"
                style="@style/market_search_result_item_name"
                tools:text="aaaaaaaaaaaaaa"/>

            <com.tik.android.component.widget.RegularTextView
                android:id="@+id/search_stock_symbol"
                style="@style/market_search_result_item_symbol"
                android:layout_width="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="@dimen/dimen_10"
                tools:text="aaaaaaaaaaaaaa"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <ImageView
            android:id="@+id/search_star"
            style="@style/TitleClickableImageStyle"
            android:layout_marginTop="@dimen/dimen_10"
            android:layout_marginEnd="@dimen/dimen_8"
            android:src="@drawable/market_selector_favor" />


    </LinearLayout>

</LinearLayout>