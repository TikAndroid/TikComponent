<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/trade_order_filter_title_color"/>
            <corners android:radius="@dimen/trade_filter_title_corner_radius"/>
            <stroke android:width="@dimen/dimen_1" android:color="@color/trade_order_filter_title_border_color"/>
        </shape>
    </item>
    <item android:state_checked="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/trade_order_filter_title_color"/>
            <corners android:radius="@dimen/trade_filter_title_corner_radius"/>
            <stroke android:width="@dimen/dimen_1" android:color="@color/trade_order_filter_title_border_color"/>
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/trade_order_filter_title_color"/>
            <corners android:radius="@dimen/trade_filter_title_corner_radius"/>
            <stroke android:width="@dimen/dimen_1" android:color="@color/trade_order_filter_title_border_color"/>
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/trade_order_filter_container_bg"/>
            <corners android:radius="@dimen/trade_filter_title_corner_radius"/>
            <stroke android:width="@dimen/dimen_1" android:color="@color/trade_order_filter_title_border_color"/>
        </shape>
    </item>

</selector>