<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AccountTextStyle">
        <item name="android:textSize">@dimen/account_text_normal</item>
        <item name="android:textColor">@color/account_text_color_primary</item>
    </style>

    <style name="AccountTextStyle.Title">
        <item name="android:textSize">@dimen/account_text_title</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AccountTextStyle.Primary" parent="AccountTextStyle">
    </style>
    <style name="AccountTextStyle.Primary.Inverse">
        <item name="android:textColor">@color/account_text_color_primary_inverse</item>
    </style>
    <style name="AccountTextStyle.Primary.Highlight">
        <item name="android:textColor">@color/account_text_color_highlight</item>
    </style>

    <style name="AccountTextStyle.Medium" parent="AccountTextStyle">
        <item name="android:textSize">@dimen/account_text_medium</item>
    </style>
    <style name="AccountTextStyle.Medium.Inverse">
        <item name="android:textColor">@color/account_text_color_primary_inverse</item>
    </style>
    <style name="AccountTextStyle.Medium.Highlight">
        <item name="android:textColor">@color/account_text_color_highlight</item>
    </style>
    <style name="AccountTextStyle.Medium.Deactive">
        <item name="android:textColor">@color/account_text_deactive</item>
    </style>

    <style name="AccountTextStyle.Little" parent="AccountTextStyle">
        <item name="android:textSize">@dimen/account_text_little</item>
    </style>
    <style name="AccountTextStyle.Little.Inverse">
        <item name="android:textColor">@color/account_text_color_primary_inverse</item>
    </style>
    <style name="AccountTextStyle.Little.Highlight">
        <item name="android:textColor">@color/account_text_color_highlight</item>
    </style>
    <style name="AccountTextStyle.Little.Secondary">
        <item name="android:textColor">@color/account_text_color_secondary</item>
    </style>
    <style name="AccountTextStyle.Little.Deactive">
        <item name="android:textColor">@color/account_text_deactive</item>
    </style>

    <style name="AccountImageButtonStyle">
        <item name="android:scaleType">fitXY</item>
    </style>

    <style name="AccountImageButtonStyle.ThirdLoginIcon">
        <item name="android:scaleType">fitXY</item>
        <item name="android:layout_width">@dimen/account_icon_size_medium</item>
        <item name="android:layout_height">@dimen/account_icon_size_medium</item>
    </style>

    <style name="AccountTitleBarStyle" parent="Toolbar">
    </style>

    <!--卡片输入表单的每项对应的样式-->
    <style name="AccountCardFormItemStyle">
        <item name="android:layout_marginStart">12dp</item>
        <item name="android:layout_marginEnd">10dp</item>
    </style>

    <style name="AccountTitleCloseStyle" parent="@style/TitleClickableImageStyle">
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:scaleType">center</item>
    </style>
    <style name="AccountTitleStyle">
        <item name="android:layout_height">@dimen/toolbar_height</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/itemTitleColor</item>
        <item name="android:textSize">@dimen/text_18</item>
        <item name="android:lineSpacingExtra">@dimen/text_medium</item>
    </style>
</resources>